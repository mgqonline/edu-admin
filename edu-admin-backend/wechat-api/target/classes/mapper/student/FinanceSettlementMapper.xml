<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eduadmin.wechat.mapper.FinanceSettlementMapper">
  <resultMap id="BaseMap" type="com.eduadmin.wechat.domain.FinanceSettlement">
    <id column="id" property="id" />
    <result column="student_id" property="studentId" />
    <result column="class_id" property="classId" />
    <result column="total_fee" property="totalFee" />
    <result column="hours" property="hours" />
    <result column="status" property="status" />
    <result column="op_type" property="opType" />
    <result column="method" property="method" />
    <result column="created_at" property="createdAt" />
  </resultMap>

  <select id="listByStudent" resultMap="BaseMap">
    SELECT * FROM finance_settlement WHERE student_id = #{studentId} ORDER BY created_at DESC
  </select>
</mapper>