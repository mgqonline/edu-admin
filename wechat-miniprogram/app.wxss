@import "style/weui.wxss";

page { background-color: #f7f7f7; }
.safe-area-bottom { padding-bottom: 68px; }
.p-24 { padding: 24rpx; }
.mb-12 { margin-bottom: 12rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mt-16 { margin-top: 16rpx; }
.text-primary { color: #07c160; }
.text-secondary { color: #1890ff; }
.text-muted { color: #666; }
.bg-page { background: #f7f7f7; }
.border-light { border-color: #eaeaea; }
.fs-32 { font-size: 32rpx; }
.fs-28 { font-size: 28rpx; }
.fs-26 { font-size: 26rpx; }
.fs-24 { font-size: 24rpx; }
.grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 24rpx; }
.grid-3 { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 24rpx; }
.card { background: #fff; border: 1rpx solid #eee; border-radius: 12rpx; padding: 24rpx; }
.card-title { font-size: 32rpx; color: #333; }
.card-subtitle { font-size: 26rpx; color: #666; }
.card-actions { display: flex; justify-content: flex-end; gap: 16rpx; margin-top: 16rpx; }
.list-item { display: flex; padding: 24rpx; border-bottom: 1rpx solid #eaeaea; background: #fff; }
.list-icon { width: 48rpx; height: 48rpx; margin-right: 16rpx; }
.list-text { flex: 1; }
.list-meta { color: #999; font-size: 24rpx; }
.btn-primary { background: #07c160; color: #fff; border-radius: 8rpx; }
.btn-secondary { background: #1890ff; color: #fff; border-radius: 8rpx; }
.empty { padding: 48rpx; text-align: center; color: #999; }
.skeleton { background: #f0f0f0; border-radius: 8rpx; min-height: 80rpx; }

/* UI enhancements */
.hero { background: linear-gradient(135deg, #07c160 0%, #33d1a0 100%); color: #fff; padding: 24rpx; border-radius: 16rpx; box-shadow: 0 10rpx 24rpx rgba(7,193,96,0.18); }
.hero-title { font-size: 36rpx; font-weight: 600; }
.hero-subtitle { margin-top: 8rpx; opacity: 0.9; font-size: 26rpx; }
.section-title { position: relative; padding-left: 16rpx; font-size: 28rpx; color: #333; margin: 24rpx 0 12rpx; }
.section-title::before { content: ""; position: absolute; left: 0; top: 50%; transform: translateY(-50%); width: 6rpx; height: 24rpx; background: #07c160; border-radius: 3rpx; }
.chips { display: flex; gap: 12rpx; flex-wrap: wrap; margin-top: 12rpx; }
.chip { background: #f5fff9; border: 1rpx solid #c8f2df; color: #07c160; border-radius: 9999rpx; padding: 8rpx 16rpx; font-size: 24rpx; }
.chip.dark { background: #eef3ff; border-color: #cfe0ff; color: #1890ff; }
.chip.gray { background: #f6f6f6; border-color: #e9e9e9; color: #666; }
.nav-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 16rpx; margin-top: 16rpx; }
.nav-item { background: #fff; border: 1rpx solid #eee; border-radius: 16rpx; padding: 24rpx; text-align: center; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06); }
.nav-item:active { transform: scale(0.98); }
.nav-deco { height: 40rpx; border-radius: 12rpx; margin-bottom: 16rpx; position: relative; }
.nav-deco::after { content: ""; position: absolute; right: 12rpx; top: 50%; transform: translateY(-50%); width: 16rpx; height: 16rpx; border-radius: 50%; background: #fff; box-shadow: 0 0 0 6rpx rgba(255,255,255,0.4); }
.nav-item-title { font-size: 28rpx; color: #333; }
.nav-item.msg .nav-deco { background: linear-gradient(135deg, #07c160 0%, #33d1a0 100%); }
.nav-item.contact .nav-deco { background: linear-gradient(135deg, #1890ff 0%, #6fb3ff 100%); }
.nav-item.feedback .nav-deco { background: linear-gradient(135deg, #ff8f3a 0%, #ffc36b 100%); }

/* Message center */
.composer { background: #fff; border: 1rpx solid #eee; border-radius: 12rpx; padding: 16rpx; display: grid; grid-template-columns: 1fr auto; gap: 12rpx; align-items: center; }
.composer-input { width: 100%; padding: 12rpx; border: 1rpx solid #eaeaea; border-radius: 8rpx; }
.status-pill { border-radius: 9999rpx; padding: 6rpx 12rpx; font-size: 22rpx; display: inline-block; }
.status-ok { background: #f0fff6; color: #07c160; border: 1rpx solid #c8f2df; }
.status-pending { background: #fff7f0; color: #ff8f3a; border: 1rpx solid #ffd7b0; }
.badge-dot { width: 10rpx; height: 10rpx; border-radius: 50%; display: inline-block; margin-right: 8rpx; }
.badge-dot.green { background: #07c160; }
.badge-dot.orange { background: #ff8f3a; }

/* Leave form layout */
.form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 16rpx; margin-top: 12rpx; }
.form-item { background: #fff; border: 1rpx solid #eee; border-radius: 12rpx; padding: 16rpx; }
.form-label { font-size: 26rpx; color: #666; margin-bottom: 8rpx; }
.picker-display { padding: 12rpx; border: 1rpx solid #eaeaea; border-radius: 8rpx; }
.profile-header { display: flex; align-items: center; gap: 16rpx; }
.avatar { width: 96rpx; height: 96rpx; border-radius: 50%; border: 1rpx solid #eee; background: linear-gradient(135deg,#f7f7f7 0%,#ffffff 100%); }
.info { flex: 1; }
.stat-item { display: flex; flex-direction: column; align-items: center; padding: 16rpx; }
.stat-value { font-size: 32rpx; color: #07c160; }
.stat-label { font-size: 24rpx; color: #666; }
.tag { display: inline-block; padding: 6rpx 12rpx; border: 1rpx solid #eaeaea; border-radius: 9999rpx; font-size: 22rpx; color: #666; }
.weui-btn_warn { background: #ff4d4f; color: #fff; border: none; }
.weui-btn_warn:active { background: #d9363e; }
.fs-32 { font-size: 36rpx; font-weight: 600; }
.form-label { display: inline-block; width: 160rpx; color: #333; }
.weui-cell__hd { padding-right: 16rpx; align-self: center; }

/* Page scroll container to avoid overlapping with custom TabBar */
.page-scroll { height: 100vh; box-sizing: border-box; overflow-y: auto; padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx); }