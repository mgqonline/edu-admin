/* Minimal WeUI styles used by pages */
.weui-btn { display: block; width: 100%; padding: 12px 0; text-align: center; border-radius: 4px; font-size: 16px; }
.weui-btn_primary { background-color: #07c160; color: #fff; }
.weui-btn_default { background-color: #f8f8f8; color: #333; }
.weui-cells { background-color: #fff; margin-top: 10px; }
.weui-cell { display: flex; padding: 12px 16px; border-bottom: 1px solid #eee; }
.weui-cell__bd { flex: 1; }
.weui-cell__ft { color: #888; }
.weui-form__control-area { padding: 12px 16px; }
.weui-input, .weui-textarea { width: 100%; padding: 10px; border: 1px solid #eee; border-radius: 4px; }
.weui-loadmore { text-align: center; color: #888; padding: 10px; }