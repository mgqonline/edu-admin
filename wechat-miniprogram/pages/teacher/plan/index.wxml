<scroll-view class="page-scroll p-24" scroll-y="true">
  <view class="hero">
    <view class="hero-title">教学计划</view>
    <view class="hero-subtitle">新增计划与上传资源</view>
    <view class="chips">
      <view class="chip">班级：{{classId || '未设定'}} </view>
      <view class="chip">标题：{{titleLen}} 字</view>
      <view class="chip">内容：{{contentLen}} 字</view>
    </view>
  </view>

  <view class="card">
    <view class="section-title">计划信息</view>
    <view class="weui-cells weui-cells_form">
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">班级ID</label></view>
        <view class="weui-cell__bd"><input class="weui-input" placeholder="例如 class-100" bindinput="onClassId" value="{{classId}}"/></view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">标题</label></view>
        <view class="weui-cell__bd"><input class="weui-input" placeholder="计划标题" bindinput="onTitle" value="{{title}}"/></view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd"><label class="weui-label">内容</label></view>
        <view class="weui-cell__bd"><textarea class="weui-textarea" placeholder="计划内容" bindinput="onContent">{{content}}</textarea></view>
      </view>
    </view>
    <view class="section-title">计划资源</view>
    <view class="composer">
      <input class="composer-input" placeholder="已上传资源URL" value="{{resourceUrl}}" disabled/>
      <button class="weui-btn weui-btn_default" size="mini" bindtap="onPickResource">上传资源</button>
    </view>
    <view class="card-actions">
      <button class="weui-btn weui-btn_primary" bindtap="onSubmit" loading="{{submitting}}">提交计划</button>
    </view>
  </view>
</scroll-view>