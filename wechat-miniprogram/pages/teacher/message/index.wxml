<scroll-view class="page-scroll p-24" scroll-y="true">
  <view class="hero">
    <view class="hero-title">家长留言</view>
    <view class="hero-subtitle">查看与回复家长留言</view>
    <view class="chips"><view class="chip">未回复：{{unreadCount}} 条</view></view>
  </view>
  <view class="card">
    <view wx:if="{{loading}}" class="skeleton mt-16"></view>
    <block wx:for="{{list}}" wx:key="id">
      <view class="list-item">
        <view class="list-text">
          <view class="fs-28">{{item.parentName}}：</view>
          <view class="list-meta">{{item.createdAt || ''}}</view>
          <view>{{item.content}}</view>
        </view>
      </view>
      <view class="weui-cells weui-cells_form">
        <view class="weui-cell">
          <view class="weui-cell__hd"><label class="weui-label">回复</label></view>
          <view class="weui-cell__bd"><input class="weui-input" data-id="{{item.id}}" bindinput="onReplyInput" placeholder="输入回复"/></view>
          <view class="weui-cell__ft"><button class="weui-btn weui-btn_primary" size="mini" data-id="{{item.id}}" bindtap="onReply">发送</button></view>
        </view>
      </view>
    </block>
    <view class="empty" wx:if="{{!loading && list.length===0}}">暂无留言</view>
  </view>
</scroll-view>